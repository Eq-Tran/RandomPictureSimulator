<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/changepicBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="280dp"
        android:text="@string/chngePictureButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageID" />

    <ImageView
        android:id="@+id/imageID"
        android:layout_width="188dp"
        android:layout_height="230dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="60dp"
        android:contentDescription="@string/meliodaspicture"
        app:layout_constraintBottom_toTopOf="@+id/changepicBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ban" />

</androidx.constraintlayout.widget.ConstraintLayout>